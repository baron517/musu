/* pages/cat/cat.wxss */
.cat-list{
    background: #f7f7f7;
}

.xuanze-col .peijian-list{line-height:70rpx;padding-top:12rpx;}

.top-tab{position: fixed;left:0;top:0;width:100%;height:80rpx;background: #f7f7f7;z-index:100;}
.tab-detail{width:33.33%;float:left;line-height: 80rpx;text-align: center;}
.tab-detail.active{color: #ff4544;}
.tab-detail.active .text{border-bottom:2px solid #ff4544;}

.cat-list .cat-item{
    height: 106rpx;
    text-align: center;
    border-left: 8rpx solid transparent;
}

.cat-list .cat-item.active{
    background: #fff;
    color: #ff4544;
    border-left-color: #ff4544;
}

.cat-list .cat-item image{
    margin-right: 16rpx;

}
.cat-list .cat-item .cat-name{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.sub-cat-box{
    background: #fff;
}

.sub-cat-header{
    height: 106rpx;
    padding-left: 24rpx;
    margin-bottom: 0rpx;
    transition: background 200ms;
}

.sub-cat-header.active{
    background: rgba(255, 69, 68, 0.07);
}

.sub-cat-header > view{
    height: 100%;
}

.sub-cat-header navigator{
    height: 100%;
    padding: 0 24rpx;
}

.sub-cat-header navigator image{
    margin-left: 14rpx;
}

.sub-cat-list{
    flex-wrap:wrap;
}

.sub-cat-list .sub-cat-item{
    width: 33%;
    text-align: center;
    margin-bottom: 40rpx;
}

.sub-cat-list .sub-cat-item image{
    margin-bottom: 8rpx;
}

.sub-cat-list .sub-cat-item view{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.cat-block{
    height: 184rpx;
    background: #f7f7f7;
    margin-bottom: 20rpx;
}

.cat-block > .flex-grow-1{
    padding: 32rpx;
}

.cat-block > .flex-grow-0{
    padding: 0 20rpx 0 0;
}

.cat-block .cat-image{
    width: 128rpx;
    height: 128rpx;
}
/* 隐藏侧栏的样式 start */
.cat-block-list.big .cat-block{
    height: 212rpx;
}

.cat-block-list.big .cat-block>.flex-grow-1{
    padding: 48rpx;
}
.cat-block-list.big .cat-block>.flex-grow-0{
    padding: 0 32rpx 0 0;
}
.cat-block-list.big .cat-block .cat-image{
    width: 164rpx;
    height: 164rpx;
}
/* 隐藏侧栏的样式 end */

.xuanze-col{padding-left:160rpx;position: relative;box-sizing: border-box;line-height:100rpx;border-bottom:1px solid #ddd;min-height:100rpx;}
.xuanze-col .label{position: absolute;left:0;top:0;color:#000;}
.xuanze-col .tui-picker-detail{color:#999;}
.xuanze-col .xuanze-input{line-height:100rpx;position: relative;top:20rpx;}

.price-col{color:#dc0000;padding:10rpx 0;}
.price-col .text{font-size:36rpx;}

.button-col{padding:20rpx 0;}
.button{background: #dc0000;color:#fff;font-size:32rpx;padding:20rpx 0;text-align: center;border-radius: 10rpx;}

.cat-small-style{
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
}

.device_iphone_x ~ .after-navber .cat-small-style{
    padding-bottom:165rpx;
}

.cat-small-style > .flex-grow-0{
    text-align: center;
    margin: 20rpx 0;
}

.cat-small-style.cat-num-3 > .flex-grow-0{
    width: 50%;
}
.cat-small-style.cat-num-4 > .flex-grow-0{
    width: 25%;
}

.cat-small-style .cat-item{
    position: relative;padding-left:260rpx;
    height:250rpx;
}

.cat-small-style .cat-item .cat-icon{
    width: 240rpx;
    height: 240rpx;
    position: absolute;
    left:0;top:0;
}

.cat-small-style .cat-item .cat-name{
    padding: 16rpx 18rpx;
    position: relative;
    font-size:32rpx;
    font-weight: bold;
}

.cat-small-style .cat-item .cat-name .text{font-size:26rpx;margin-left:10rpx;font-weight: normal;}

.cat-small-style .cat-item .cat-tag{
    padding: 6rpx 18rpx;
    position: relative;
    font-size:20rpx;
    border-radius: 8rpx;
    margin-left:4rpx;
    border:1px solid #ccc;
    display: inline-block;
}


.cat-small-style .cat-item .cat-price{
    font-size:36rpx;color:#fe3132;
    padding: 20rpx 18rpx;
    font-weight:bold;
}

.cat-small-style .cat-item .cat-price .unit{font-size:24rpx;}


.cat-small-style .cat-item .cat-name .icon{position: absolute;right:10rpx;width:40rpx;height:40rpx;}

.cat-small-style .cat-item .cat-name .text{font-size:26rpx;margin-left:10rpx;font-weight: normal;}

